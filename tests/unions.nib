
union Value {
    _u8: u8;
    _s8: s8;
    _u16: u16;
    _s16: s16;
    _u32: u32;
    _s32: s32;
    _u64: u64;
    _s64: s64;
}

var g_val : Value;

proc main() => int {
    var val : Value;
    var p_val : ^Value = ^val;
    p_val._s32 = 20;

    g_val._u64 = 10;

    return g_val._u8 + g_val._u16 + p_val._s32; // 40
}
