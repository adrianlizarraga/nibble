struct Smol {
    a : char;
    b : char;
}

proc pass_smol(s : Smol) => int {
    return s.a + s.b;
}

struct Vec3 {
    x : int;
    y : int;
    z : int;
}

proc vec3_add_val(a: Vec3, b:  Vec3) => int {
    return a.x + a.y + a.z + b.x + b.y + b.z;
}

proc vec3_add(a : ^Vec3, b : ^Vec3, c : ^Vec3) {
    c.x = a.x + b.x;
    (*c).y = (*a).y + (*b).y;
    c.z = a.z + b.z;
}

